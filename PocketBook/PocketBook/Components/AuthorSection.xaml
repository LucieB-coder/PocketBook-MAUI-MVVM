<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:PocketBook.Components"
             x:Class="PocketBook.Components.AuthorSection"
             x:Name="this">
    <StackLayout Padding="0" BindingContext="{x:Reference this}">
        <Grid ColumnDefinitions="7,Auto,*,Auto" RowDefinitions="*,*,*,*" Padding="0">
            <Border Grid.ColumnSpan="4" BackgroundColor="{StaticResource Gray100}" StrokeThickness="0" Padding="10,5,5,5">
                <Label 
                Text="{Binding AuthorName}"
                Style="{StaticResource authorName}"
                HorizontalOptions="Start"/>
            </Border>
            <controls:BookSection Grid.Column="1" Grid.Row="1" ImageSource="les_miserables" BookName="La horde du contrevant" AuthorName="{Binding AuthorName}" Status="Non lu"/>
            <BoxView  Grid.ColumnSpan="3" Grid.Column="1"  Grid.Row="2" Margin="10,15,0,0"/>
            <controls:BookSection Grid.Column="1" Grid.Row="3" ImageSource="book_and_image" BookName="La zone du dehors" AuthorName="{Binding AuthorName}" Status="TerminÃ©"/>
        </Grid>
    </StackLayout>
</ContentView>
