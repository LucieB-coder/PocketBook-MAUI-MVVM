<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PocketBook.Pages.AllBooksPage"
             Title="AllBooksPage">
    <ScrollView>
        <VerticalStackLayout>
            <Grid ColumnDefinitions="*,*" Style="{StaticResource header}">
                <ImageButton Source="chevron_right" Clicked="OnGoBack" HeightRequest="30">
                    <ImageButton.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="Red" />
                    </ImageButton.Behaviors>
                </ImageButton>
                <Label Text="Mes Livres" Grid.Column="1" Style="{StaticResource headerText}"/>
                
            </Grid>
          
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>