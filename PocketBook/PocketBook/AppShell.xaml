<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PocketBook.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PocketBook"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="My Library"
            Icon="books_vertical.svg"
            ContentTemplate="{DataTemplate local:LibraryPage}"
            Route="LibraryPage" />
        <ShellContent
            Title="My Lists"
            Icon="list_bullet.svg"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="ListsPage" />
        <ShellContent
            Title="My Readings"
            Icon="bookmark.svg"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="ReadingsPage" />
        <ShellContent
            Title="Search"
            Icon="magnifying_glass.svg"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="SearchPage" />
    </TabBar>
</Shell>
