<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PocketBook.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PocketBook.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <TabBar>
        <ShellContent
            Title="My Library"
            Icon="books_vertical"
            ContentTemplate="{DataTemplate local:LibraryPage}"
            Route="Library"/> 
        <ShellContent
            Title="My Lists"
            Icon="list_bullet"
            ContentTemplate="{DataTemplate local:AllBooksPage}"
            Route="AllBooksPage" />
        <ShellContent
            Title="My Readings"
            Icon="bookmark"
            ContentTemplate="{DataTemplate local:LendBooksPage}"
            Route="Readings" />
        <ShellContent
            Title="Search"
            Icon="magnifying_glass"
            ContentTemplate="{DataTemplate local:AuthorFilterPage}"
            Route="Search" />
    </TabBar>

    <ShellContent
        Title="Filter By Date"
        ContentTemplate="{DataTemplate local:DateFilterPage}"
        Route="DateFilter" />
    <ShellContent
        Title="Filter By Note"
        ContentTemplate="{DataTemplate local:NoteFilterPage}"
        Route="NoteFilter" />
    <ShellContent
        Title="OneBook"
        ContentTemplate="{DataTemplate local:OneBookPage}"
        Route="OneBook" />
</Shell>
