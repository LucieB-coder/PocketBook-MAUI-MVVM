<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PocketBook.ListItem"
             x:Name="this">
    <Frame BindingContext="{x:Reference this}" BackgroundColor="Transparent">
        <Grid  Grid.Row="0" ColumnDefinitions="*,*,*"  >
            <HorizontalStackLayout Spacing="20" Grid.Column="0">
                <Image Source="{Binding ImageSource}" />
                <Label Text="{Binding ItemName}" />
            </HorizontalStackLayout>
            <HorizontalStackLayout Grid.Column="2" HorizontalOptions="End">
                <Label Text="{Binding NumberOfElements}" TextColor="Gray"/>
                <Image Source="chevron_right"/>
            </HorizontalStackLayout>
        </Grid>
        
    </Frame>
   
</ContentView>
